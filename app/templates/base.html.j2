<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            background: #f4f4f4;
        }

        .widget {
            max-width: calc(100% - 20px);
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background: white;
            padding: 1em;
            margin: 1em auto;
        }
    </style>
    {% block styles %}{% endblock %}
</head>
<body>
    <nav>
        <div class="nav-wrapper">
            <a href="{{ url_for('index') }}" class="brand-logo">Lapadmin</a>
            <ul class="right">
                <li><a href="{{ url_for('calendar_redirect') }}">Calendrier</a></li>
                <li><a href="{{ url_for('calendar_day', month=now.format('YYYY-MM'), day=now.format('DD')) }}">Aujourd'hui</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        {% for category, message in get_flashed_messages(with_categories=true) %}
        {% macro get_category_class(category) %}
        {% if category == 'error' %}
        red darken-1
        {% elif category == 'warning' %}
        orange darken-1
        {% elif category == 'success' %}
        green darken-1
        {% else %}
        blue lighten-4
        {% endif %}
        {% endmacro %}
        <div class="flash {{ category }} card-panel {{ get_category_class(category) }}">
            <span class="content">
                {{ message | e }}
            </span>
            <span class="flash-close">
                <span class="material-icons icon">close</span>
            </span>
        </div>
        {% endfor %}
    </div>

    {% block content %}{% endblock %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            M.Datepicker.init(document.querySelectorAll('.datepicker'), {
                format: 'yyyy-mm-dd',
                firstDay: 1,
            });

            M.Timepicker.init(document.querySelectorAll('.timepicker'), {
                twelveHour: false,
            });
            M.FormSelect.init(document.querySelectorAll('select'));
        });
    </script>
    {% block scripts %}{% endblock %}

</body>
</html>
