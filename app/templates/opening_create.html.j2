{% extends "base.html.j2" %}

{% block styles %}
<style>
</style>
{% endblock %}

{% block content %}
<div class="container widget">
    <h1>Créer une ouverture</h1>
    <form action="." method="post">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">date_range</i>
                <input
                    type="text"
                    name="start_date"
                    id="start_date"
                    class="datepicker"
                    value="{{ request.args.get('day', '') }}"
                >
                <label for="start_date">Date</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">access_time</i>
                <input type="text" name="start_time" id="start_time" class="timepicker">
                <label for="start_time">Heure de début</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">date_range</i>
                <input
                    type="text"
                    name="end_date"
                    id="end_date"
                    class="datepicker"
                    value="{{ request.args.get('day', '') }}"
                >
                <label for="end_date">Date de fin</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">access_time</i>
                <input type="text" name="end_time" id="end_time" class="timepicker">
                <label for="end_time">Heure de fin</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit">Créer</button>
    </form>
</div>

{% endblock %}
